<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat  android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:paddingTop="0.5dp"
    android:divider="@color/userListRank"
    android:background="@color/userListLayout">

    <androidx.appcompat.widget.LinearLayoutCompat  android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/userList">

        <TextView
            android:id="@+id/tvRank"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="1"
            android:layout_alignParentBottom="true"
            android:background="@color/userListRank"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:gravity="center"
            tools:text="Placeholder" />

        <ImageView
            android:id="@+id/tvAvatar"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="1"
            android:layout_marginStart="0dp"
            android:text="NAME"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:gravity="center"
            tools:text="Placeholder" />

        <TextView
            android:id="@+id/tvPoints"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="1"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center"
            tools:text="Placeholder" />

        <ImageView
            android:id="@+id/tvStarIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="25dp"
            android:scaleType="centerCrop" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
